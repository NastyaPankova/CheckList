{
  "AllowedHosts": "*",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss:fff} {Level:u3} ({CorrelationId})] {Message:lj}{NewLine}{Exception}",
          "shared": "True"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "MainDbContext": "Server=localhost,21433;Initial Catalog=CheckListNet;Persist Security Info=False;User ID=sa;Password=Passw(0)rd;"
  },

  "General": {
    "SwaggerVisible": "{GENERAL_SWAGGER_VISIBLE}"
  },

  "IdentityServer": {
    "Url": "{IDENTITY_SERVER_URL}",
    "ClientId": "{IDENTITY_SERVER_CLIENT_ID}",
    "ClientSecret": "{IDENTITY_SERVER_CLIENT_SECRET}"
  }
}